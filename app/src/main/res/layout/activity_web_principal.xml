<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rstPassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    android:backgroundTint="@color/colorFondo"
    tools:context=".WebPrincipal">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="71dp"
        android:background="@color/colorTextFinal"
        android:backgroundTint="@color/colorTextFinal"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="60dp"
            android:layout_height="53dp"
            android:layout_marginEnd="70dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/casa"
            android:text="@string/btnHome" />

        <ImageButton
            android:id="@+id/btnCarrito"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:layout_marginEnd="70dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/carrito"
            android:text="@string/btnCarrito" />

        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/perfil"
            android:text="@string/btnPerfil" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnWeb"
        android:layout_width="376dp"
        android:layout_height="130dp"
        android:background="@color/colorTextFinal"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/btnPizzas"
        android:layout_width="376dp"
        android:layout_height="130dp"
        android:background="@color/colorTextFinal"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415"
        app:srcCompat="@drawable/simbolopizza" />

    <ImageButton
        android:id="@+id/btnConfig"
        android:layout_width="376dp"
        android:layout_height="130dp"
        android:background="@color/colorTextFinal"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.739"
        app:srcCompat="@drawable/config" />


</androidx.constraintlayout.widget.ConstraintLayout>